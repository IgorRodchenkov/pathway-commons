		<!-- This cfg. works, but please do NOT use mvn site-deploy (due to number 
			of issues)! First, 'hg clone' the remote pathway-commons.cpath2-site code 
			repository to some local dir, e.g., 'maven-site' inside this priject's root. 
			Next, do site site:stage -DstagingDirectory=<full-path> - path the above dir. 
			Finally, swith there and do: hg add *, hg commit, hg push ... -->
		<site>
			<id>pathway-commons.googlecode.com</id>
			<name>cPath2 auto-generated site</name>
			<url>http://cpath2-site.pathway-commons.googlecode.com/hg</url>
		</site>

		<!-- This is also for mvn site:stage generate nice links. So please do: 
			'hg clone' the remote pathway-commons.repo repository to a local dir. Next, 
			do mvn deploy -Plocal-deploy, which, if the pathway-commons.repo variable 
			is set (in the settings.xml) to the cloned repo directory, will deploy there. 
			Finally, switch there and do: hg add *, hg commit, hg push ... -->
		<repository>
			<id>pathway-commons.googlecode.com</id>
			<name>Pathway Commons Maven Repository</name>
			<url>http://repo.pathway-commons.googlecode.com/hg</url>
		</repository>
		<downloadUrl>http://code.google.com/p/pathway-commons/downloads/</downloadUrl>
	</distributionManagement>

