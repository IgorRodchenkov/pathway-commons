<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>pathwaycommons.cpath</groupId>
	<artifactId>cpath2</artifactId>
	<packaging>pom</packaging>
	<name>CPath2</name>
	<version>1.0-SNAPSHOT</version>
	<description>CPath is a database and software suite for storing, visualizing, and analyzing biological pathways.</description>
	<url>http://code.google.com/p/pathway-commons/</url>
	<issueManagement>
		<system>Google Code</system>
		<url>http://code.google.com/p/pathway-commons/issues/</url>
	</issueManagement>
	<organization>
		<name>Pathway Commons</name>
		<url>http://www.pathwaycommons.org</url>
	</organization>
	<modules>
		<module>cpath-dao</module>
		<module>cpath-web</module>
		<module>cpath-warehouse</module>
		<module>cpath-fetcher</module>
		<module>cpath-admin</module>
		<module>cpath-importer</module>
	</modules>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>1.6</source>
						<target>1.6</target>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-surefire-plugin</artifactId>
					<configuration>
						<testFailureIgnore>false</testFailureIgnore>
						<argLine>-Xmx1024M</argLine>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	
	
	<repositories>
		<repository>
			<id>biopax.snapshots</id>
			<name>BioPAX Snapshots Repository at Sourceforge</name>
			<url>http://biopax.sourceforge.net/m2repo/snapshots/</url>
			<releases>
				<enabled>false</enabled>
			</releases>
		</repository>
		<repository>
			<id>biopax.releases</id>
			<name>BioPAX Repository at Sourceforge</name>
			<url>http://biopax.sourceforge.net/m2repo/releases/</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>ebi-repo</id>
			<name>The EBI internal repository</name>
			<url>http://www.ebi.ac.uk/~maven/m2repo</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>


