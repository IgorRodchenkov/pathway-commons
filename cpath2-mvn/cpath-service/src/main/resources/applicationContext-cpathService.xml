<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>
    
	<context:property-placeholder location="file:${CPATH2_HOME}/cpath.properties"/>

	<!-- simply starting this bean populates the (static) Bridgedb DataSource list from constants and metadataDAO! -->
	<bean id="bioDataTypes" class="cpath.warehouse.internal.BioDataTypes" init-method="init">
		<constructor-arg ref="metadataDAO"/>
	</bean>
	
	<bean id="service" class="cpath.service.internal.CPathServiceImpl">
		<constructor-arg ref="paxtoolsDAO" index="0"/>
		<constructor-arg ref="proteinsDAO" index="1"/>
		<constructor-arg ref="moleculesDAO" index="2"/>
		<constructor-arg ref="metadataDAO"/>
		<constructor-arg ref="cvFetcher"/>
	</bean>
	
</beans>