    <bean id="proteinsDAO" class="cpath.warehouse.internal.WarehousePaxtoolsHibernateDAO">
        <property name="sessionFactory" ref="testSessionFactory"/>
    </bean>

    <bean id="metadataDAO" class="cpath.warehouse.internal.MetadataHibernateDAO">
        <property name="sessionFactory" ref="testSessionFactory"/>
    </bean>
    
    <bean id="moleculesDAO" class="cpath.warehouse.internal.WarehousePaxtoolsHibernateDAO">
        <property name="sessionFactory" ref="testSessionFactory"/>
    </bean>

    <bean id="cpath2_test" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
    	<property name="driverClass" value="${driver}"/>
    	<property name="jdbcUrl" value="${connection}cpath2_test?autoReconnect=true&amp;max_allowed_packet=256M"/>
    	<property name="user" value="${user}"/>
    	<property name="password" value="${password}"/>
    	<property name="maxPoolSize" value="30"/>
    	<property name="maxStatements" value="50"/>
    	<property name="maxIdleTime" value="1800"/>
    </bean>
  	
	<bean class="org.springframework.dao.annotation.PersistenceExceptionTranslationPostProcessor"/>
	
</beans>
