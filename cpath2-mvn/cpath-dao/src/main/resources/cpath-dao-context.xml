			  <value>org.biopax.paxtools.proxy.level3.DegradationProxy</value>
			  <value>org.biopax.paxtools.proxy.level3.DeltaGProxy</value>
			  <value>org.biopax.paxtools.proxy.level3.DnaProxy</value>
			  <value>org.biopax.paxtools.proxy.level3.DnaReferenceProxy</value>
			  <value>org.biopax.paxtools.proxy.level3.DnaRegionProxy</value>
			  <value>org.biopax.paxtools.proxy.level3.DnaRegionReferenceProxy</value>
			  <value>org.biopax.paxtools.proxy.level3.EntityFeatureProxy</value>
