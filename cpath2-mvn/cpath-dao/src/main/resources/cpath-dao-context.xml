			  <value>org.biopax.paxtools.proxy.level3.CatalysisProxy</value>
			  <value>org.biopax.paxtools.proxy.level3.CellularLocationVocabularyProxy</value>
			  <value>org.biopax.paxtools.proxy.level3.CellVocabularyProxy</value>
