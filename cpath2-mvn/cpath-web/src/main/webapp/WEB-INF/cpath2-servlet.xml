<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd">

    <!-- JSR-303 support will be detected on classpath and enabled automatically -->
    <mvc:annotation-driven/>
	
	<!-- (new in Spring 3.0) go directly to the 'hello' view -->
	<mvc:view-controller path="/hello" view-name="hello"/>

	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/" />
		<property name="suffix" value=".jsp" />
	</bean>
  
	<!-- Exceptions handler -->
	<bean
		class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
		<property name="exceptionMappings">
			<map>
				<entry key="Exception" value="error" />
			</map>
		</property>
		<property name="defaultErrorView" value="error" />
		<property name="defaultStatusCode"><value>500</value></property>
		<property name="exceptionAttribute"><value>exception</value></property>
	</bean>
	
	<bean id="searchController" class="cpath.web.mvc.SearchController">
		<constructor-arg ref="paxtoolsDAO"/>
	</bean>
	
</beans>