<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!-- JSR-303 (validation) support will be detected on classpath and enabled automatically -->
    <context:annotation-config/>
    
	<context:property-placeholder location="file:${CPATH2_HOME}/cpath.properties"/>

	<bean id="log4jInitialization" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
	  <property name="targetClass"
				value="org.springframework.util.Log4jConfigurer" />
	  <property name="targetMethod" value="initLogging" />
	  <property name="arguments">
		<list>
		  <value>file:${CPATH2_HOME}/log4j.properties</value>
		</list>
	  </property>
	</bean>
	  	 
	<bean id="searchController" class="cpath.webservice.SearchController">
		<constructor-arg ref="service"/>
	</bean>
	
	<bean id="graphController" class="cpath.webservice.GraphController">
		<constructor-arg ref="service"/>
	</bean>

	<bean id="helpController" class="cpath.webservice.HelpController">
	</bean>
	
	<bean id="validationResultsController" class="cpath.webservice.ValidationResultsController">
		<constructor-arg ref="service"/>
	</bean>

	<bean id="biopaxModelController" class="cpath.webservice.BiopaxModelController">
		<constructor-arg ref="service"/>
	</bean>
	
	
	<!-- This additional configuration (three beans) is required 
	for cpath-api-3.0.0, because Jaxb2RootElementHttpMessageConverter 
	used as default by MVC does not treat properly abstract cpath.service.jaxb.Response 
	and @XmlElementRef annotation on cpath.service.jaxb.ServiceResponse.response
	-->
	<bean id="marshaller" class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
		<property name="classesToBeBound">
			<list>
				<value>cpath.service.jaxb.Response</value>
				<value>cpath.service.jaxb.ServiceResponse</value>
				<value>cpath.service.jaxb.ErrorResponse</value>
				<value>cpath.service.jaxb.SearchResponse</value>
				<value>cpath.service.jaxb.TraverseResponse</value>
				<value>cpath.service.jaxb.TraverseEntry</value>
				<value>cpath.service.jaxb.SearchHit</value>
				<value>cpath.service.jaxb.Help</value>
			</list>
		</property>
	</bean>
	
	<bean id="marshallingHttpMessageConverter" class="org.springframework.http.converter.xml.MarshallingHttpMessageConverter">
        <property name="marshaller" ref="marshaller"/>
        <property name="unmarshaller" ref="marshaller"/>
    </bean>

    <!-- Required to bind the return value to the ResponseBody. -->
    <bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">
        <property name="messageConverters">
            <list>
                <ref bean="marshallingHttpMessageConverter" />
            </list>
        </property>
    </bean>
	
	<mvc:annotation-driven/>
</beans>