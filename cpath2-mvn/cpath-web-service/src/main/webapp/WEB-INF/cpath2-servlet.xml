<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">
    
    <context:annotation-config/>  
    
	<context:property-placeholder location="file:${CPATH2_HOME}/cpath.properties"/>

	<!-- Handles HTTP GET requests for /resources/** by efficiently serving up static resources in the ${webappRoot}/resources/ directory -->
	<mvc:resources mapping="/resources/**" location="/resources/" />
	
	<!-- Access to the cpath2 data exported into different formats and organized by species and data sources -->	
	<mvc:resources mapping="/downloads/**" location="file:${CPATH2_HOME}/downloads/" />
	
	<mvc:interceptors>
      <bean class="cpath.webservice.interceptor.CPathWebserviceLoggingHandlerInterceptor" />
    </mvc:interceptors> 
	

	<bean id="log4jInitialization" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
	  <property name="targetClass" value="org.springframework.util.Log4jConfigurer" />
	  <property name="targetMethod" value="initLogging" />
	  <property name="arguments">
		<list>
		  <value>file:${CPATH2_HOME}/log4j.properties</value>
		</list>
	  </property>
	</bean>
	
	<!-- Application Message Bundle -->
	<bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>file:${CPATH2_HOME}/cpath</value>
			</list>
		</property>
		<property name="cacheSeconds" value="0" />
	</bean>  
        
	<bean id="searchController" class="cpath.webservice.SearchController">
		<constructor-arg ref="service"/>
	</bean>
	
	<bean id="graphController" class="cpath.webservice.GraphController">
		<constructor-arg ref="service"/>
	</bean>

	<bean id="helpController" class="cpath.webservice.HelpController">
		<constructor-arg ref="service"/>
	</bean>
	
	<bean id="metadataController" class="cpath.webservice.MetadataController">
		<constructor-arg ref="metadataDAO"/>
	</bean>

	<bean id="biopaxModelController" class="cpath.webservice.BiopaxModelController">
		<constructor-arg ref="service"/>
	</bean>  
	    
	<!-- mvc:annotation-driven must the last -->
    <mvc:annotation-driven/>	    
</beans>