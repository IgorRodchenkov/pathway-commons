<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <context:annotation-config/>

	<!-- info: CvFetcher extends OntologyManager(Adapter) and also implements CvRepository interface -->
	<bean id="cvFetcher" class="cpath.cv.CvFetcher">
		<constructor-arg value="classpath:ontologies.xml"/>
		<constructor-arg ref="miriamAdapter"/>
	</bean>
	
	<bean id="miriamAdapter" class="cpath.common.internal.MiriamAdapter" />
	
</beans>