<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/security 
    http://www.springframework.org/schema/security/spring-security-3.0.xsd">

	<http access-denied-page="/denied.html" auto-config='true'>
		<form-login login-page="/login.html" authentication-failure-url="/login.html?login_error=t"/>
		<intercept-url pattern="/denied.html" filters="none"/>
		<intercept-url pattern="/login.html*" filters="none"/>
		<!-- <intercept-url pattern="/admin.html" access="ROLE_ADMIN" /> -->
		<intercept-url pattern="/**" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
		<logout/>
	</http>
	
	<authentication-manager alias="simpleAuth">
		<authentication-provider>
			<user-service>
				<!-- change the default password before starting the web app! -->
				<user name="cpath2" authorities="ROLE_USER, ROLE_ADMIN" password="cpath2" />
			</user-service>
		</authentication-provider>
	</authentication-manager>

	<global-method-security secured-annotations="enabled">
		<protect-pointcut expression="execution(* com.springsource..*Service.*(..))"
			access="ROLE_USER" />
	</global-method-security>

</beans:beans>
