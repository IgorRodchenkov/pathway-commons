<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:property-placeholder/>
	
    <context:annotation-config/>

	<!-- info: CvFetcher extends OntologyManager(Adapter) and also implements CvRepository interface -->
	<bean id="cvFetcher" class="cpath.warehouse.internal.OntologyManagerCvRepository">
		<constructor-arg value="classpath:ontologies.xml"/>
		<constructor-arg value="${CPATH2_HOME}/ontologies"/>
	</bean>
	
</beans>