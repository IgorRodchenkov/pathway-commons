<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">


    <context:annotation-config/>

	<bean id="biopaxReaderL3" class="org.biopax.paxtools.io.simpleIO.SimpleReader">
	  <constructor-arg><bean class="org.biopax.paxtools.proxy.level3.BioPAXFactoryForPersistence"/></constructor-arg>
	  <constructor-arg type="org.biopax.paxtools.model.BioPAXLevel" value="L3"/>
	</bean>

	<bean id="editorMap3" class="org.biopax.paxtools.io.simpleIO.SimpleEditorMap">
		<constructor-arg type="org.biopax.paxtools.model.BioPAXLevel" value="L3"/>
	</bean>

	<bean id="editorMap2" class="org.biopax.paxtools.io.simpleIO.SimpleEditorMap">
		<constructor-arg type="org.biopax.paxtools.model.BioPAXLevel" value="L2"/>
	</bean>

	<bean id="simpleMerger" class="org.biopax.paxtools.controller.SimpleMerger">
		<constructor-arg ref="editorMap3"/>
	</bean>

</beans>