<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>

	<context:property-placeholder location="file:${CPATH2_HOME}/cpath.properties"/>

	<bean id="premergeDispatcher" class="cpath.importer.internal.PremergeDispatcher">
		<constructor-arg ref="metadataDAO"/>
	</bean>

	<bean id="premerge" class="cpath.importer.internal.PremergeImpl" scope="prototype">
	  <constructor-arg ref="pathwayDataDAO"/>
	  <constructor-arg ref="pathwayDataJDBCServices"/>
	  <constructor-arg ref="idNormalizer"/>
	  <constructor-arg ref="validator"/>
	  <constructor-arg ref="simpleReader"/>
	  <constructor-arg ref="utils"/>
	</bean>

	<bean id="pathwayDataJDBCServices" class="cpath.warehouse.internal.PathwayDataJDBCServicesImpl">
        <property name="dbUser" value="${db.user}"/>
        <property name="dbPassword" value="${db.password}"/>
        <property name="dbDataSource" value="${wdb.datasource}"/>
        <property name="dbConnection" value="${wdb.connection}"/>
    </bean>
	
	<bean id="idNormalizer" class="cpath.importer.internal.IdNormalizer"/>

</beans>
