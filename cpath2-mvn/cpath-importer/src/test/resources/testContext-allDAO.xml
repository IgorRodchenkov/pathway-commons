    <bean id="proteinsDAO" class="cpath.dao.internal.PaxtoolsHibernateDAO">
        <property name="sessionFactory" ref="testSessionFactory"/>
    </bean>

    <bean id="metadataDAO" class="cpath.warehouse.internal.MetadataHibernateDAO">
        <property name="sessionFactory" ref="testSessionFactory"/>
    </bean>

    <bean id="pathwayDataDAO" class="cpath.warehouse.internal.PathwayDataHibernateDAO">
        <property name="sessionFactory" ref="testSessionFactory"/>
    </bean>
    
    <bean id="moleculesDAO" class="cpath.dao.internal.PaxtoolsHibernateDAO">
        <property name="sessionFactory" ref="testSessionFactory"/>
    </bean>

    <bean id="cpath2_test" class="cpath.dao.internal.DataServicesFactoryBean"/>
  	
	<bean class="org.springframework.dao.annotation.PersistenceExceptionTranslationPostProcessor"/>
	
</beans>
